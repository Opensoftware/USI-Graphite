<div id="elective-block-<%= elective_block.id %>" >
  <hr>
  <div class="row">
    <div class="col-md-1">
      <div class="label-wrapper">
        <span class="label label-danger">
          <%=t "label_elective_block_type_#{elective_block.block_type.const_name}_letter" %>
        </span>
      </div>
    </div>
    <div class="col-md-1<%=true ? 1 : 4%>">
      <h4>
        <%= link_to elective_block.name, graphite.elective_block_path(elective_block) %>
      </h4>
      <div class="row">
        <div class="col-md-2">
          <h6 class="text-muted">
            <%=t :label_semester %>
          </h6>
        </div>
        <div class="col-md-6">
          <h6 class="text-list">
            <%= elective_block.modules.collect {|mod| mod.semester_number}.uniq.join(", ") %>
          </h6>
        </div>
        <div class="col-md-2">
          <h6 class="text-muted">
            <%=t :label_annual %>
          </h6>
        </div>
        <div class="col-md-6">
          <h6 class="text-list">
            <%= elective_block.annual.try(:name) %>
          </h6>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <h6 class="text-muted">
            <%=t :label_genre%>
          </h6>
        </div>
        <div class="col-md-14">
          <h6 class="text-list">
            <%=t "label_elective_block_type_#{elective_block.block_type.try(:const_name)}", :n => elective_block.min_modules_amount, :m => elective_block.modules.count %>
          </h6>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <h6 class="text-muted">
            <%=t :label_field_of_study_plural%>
          </h6>
        </div>
        <div class="col-md-14">
          <h6 class="text-list">
            <%=raw elective_block.studies.collect {|s| [s.course.name, *("(#{s.specialty.name})" if s.specialty_id.present?), " - #{s.study_type.name.downcase} #{s.study_degree.name.camelize(:lower)}"].join(" ") }.join(", <br>") %>
          </h6>
        </div>
      </div>
    </div>
    <% if can?(:manage, Graphite::ElectiveBlock) %>
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-3">
            <%= button_tag :class => 'button-small button-small-red button-delete has-tooltip', :type => :button, :'data-href' => graphite.elective_block_path(elective_block), 'data-toggle'=>"tooltip", 'data-placement'=>"top", :title=>t(:label_remove) do %>
              <%= content_tag :i, nil, :class => 'icon icon-white icon-delete' %>
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to graphite.edit_elective_block_path(elective_block), :class => 'button-small button-small-navy has-tooltip', 'data-toggle'=>"tooltip", 'data-placement'=>"top", :title => t(:label_edit) do %>
              <%= content_tag :i, nil, :class => 'icon icon-white icon-pen' %>
            <% end %>
          </div>
          <div class="col-md-3">
            <%= button_tag :class => 'button-small button-small-checkbox button-checkbox', :type => :button do %>
            <% end %>
            <%= hidden_field_tag 'thesis_ids[]', elective_block.id, ({:disabled => true}) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
